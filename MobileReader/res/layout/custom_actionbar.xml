<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ee3c27"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/imageButtonIconBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/buttonback" />

    <ImageButton
        android:id="@+id/imageButtonIconHome"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="CodeJava.Net"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/imageButtonIconFavious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/buttomfavious" />
    <ImageButton
        android:id="@+id/imageButtonIconShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/buttonshare" />

</LinearLayout>