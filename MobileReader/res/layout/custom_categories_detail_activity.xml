<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_conner"
    
     >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	     >
	    <TextView
            android:id="@+id/textViewNameTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Show save file dialog using JFileChooser"
            android:textSize="16sp"
            android:typeface="serif"
            android:textColor="#C54133"
             >
        </TextView>
	</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
         >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imageViewIconTopic"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/test" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        

        <TextView
            android:id="@+id/textViewContentSnipTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dip"
            android:text="display a save file dialog in Java Swing using JFileChooser class"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewPublishTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dip"
            android:text="02 September 2012 Views:16,409"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>