<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2" >

        <ImageView
            android:id="@+id/imgIconQuizz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/christmas" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="10dip"
         >

        <TextView
            android:id="@+id/tvTiteCategoriesQuizz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Java Core"
             />

        <TextView
            android:id="@+id/tvChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 Chapter"
            android:layout_marginTop="10dip"
            android:textColor="#E5E5E5"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_chevron_right_black_36dp" />
    </LinearLayout>

</LinearLayout>